{
  "name": "storia",
  "version": "1.0.0",
  "description": "StorIA - AI-powered story creation and character development tool",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:web": "vite build --config vite.config.web.ts",
    "preview": "vite preview --config vite.config.web.ts",
    "dev:web": "vite --config vite.config.web.ts",
    "package": "npm run build && npm run build:electron && electron-builder"
  },
  "keywords": ["electron", "react", "ai", "writing", "authoring"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/file-saver": "^2.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0",
    "openai": "^4.20.1",
    "jspdf": "^2.5.1",
    "docx": "^8.5.0",
    "file-saver": "^2.0.5",
    "react-flow-renderer": "^10.3.17",
    "recharts": "^2.10.3"
  }
}

